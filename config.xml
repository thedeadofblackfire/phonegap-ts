<?xml version="1.0" encoding="UTF-8"?>

<widget id="com.blastis.livechat" ios-CFBundleVersion="1.0.0" version= "1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Live Chat</name>
    <description>
        Live Chat is a mobile app that allows you to chat with your web site visitors in real time.
    </description>
    <author href="http://www.blastis.com" email="dave@blastis.com">
        Blastis Corp
    </author>
	<content src="index.html" />
    <preference name="phonegap-version" value="cli-7.0.1" />
    <preference name="orientation" value="portrait" />
    <preference name="FullScreen" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="target-device" value="universal" />
    <preference name="prerendered-icon" value="false" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#622F53" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="android-minSdkVersion" value="18" />
    <preference name="android-installLocation" value="auto" />
    <preference name="AndroidLaunchMode" value="singleInstance" />
    <preference name="SplashScreenDelay" value="3000" />
    <icon src="www/icon.png" />
    <!-- Define app icon for each platform. -->
    <icon src="res/icon/android/36.png"   gap:platform="android"    gap:density="ldpi" />
    <icon src="res/icon/android/48.png"   gap:platform="android"    gap:density="mdpi" />
    <icon src="res/icon/android/72.png"   gap:platform="android"    gap:density="hdpi" />
    <icon src="res/icon/android/96.png"   gap:platform="android"    gap:density="xhdpi" />
    <icon src="res/icon/android/144.png"  gap:platform="android"    gap:density="xxhdpi" />
    <icon src="res/icon/android/192.png"  gap:platform="android"    gap:density="xxxhdpi" />
  
    <icon src="res/icon/ios/57.png"            gap:platform="ios"        width="57" height="57" />
    <icon src="res/icon/ios/72.png"            gap:platform="ios"        width="72" height="72" />
    <icon src="res/icon/ios/57-2x.png"         gap:platform="ios"        width="114" height="114" />
    <icon src="res/icon/ios/72-2x.png"         gap:platform="ios"        width="144" height="144" />
    <icon src="res/icon/ios/120.png"         gap:platform="ios"        width="120" height="120" />
    <icon src="res/icon/ios/ipad76.png"         gap:platform="ios"        width="76" height="76" />
    <icon src="res/icon/ios/ipad76-2x.png"         gap:platform="ios"        width="152" height="152" />
 
    <!-- Define app splash screen for each platform. -->
	<!--<gap:splash src="splash.png" />-->
	<gap:splash src="res/screen/android/screen-ldpi-portrait.png"  gap:platform="android" gap:density="ldpi" />
    <gap:splash src="res/screen/android/screen-mdpi-portrait.png"  gap:platform="android" gap:density="mdpi" />
    <gap:splash src="res/screen/android/screen-hdpi-portrait.png"  gap:platform="android" gap:density="hdpi" />
    <gap:splash src="res/screen/android/screen-xhdpi-portrait.png" gap:platform="android" gap:density="xhdpi" /> 
	<gap:splash src="res/screen/ios/screen-iphone-portrait.png"    gap:platform="ios"     width="320" height="480" />
    <gap:splash src="res/screen/ios/screen-iphone-portrait-2x.png" gap:platform="ios"     width="640" height="960" />
    <gap:splash src="res/screen/ios/screen-ipad-portrait.png"      gap:platform="ios"     width="768" height="1024" />
    <gap:splash src="res/screen/ios/screen-ipad-landscape.png"     gap:platform="ios"     width="1024" height="768" />  
	<gap:splash src="res/screen/ios/screen-iphone-portrait-568h-2x.png"         gap:platform="ios" width="640"  height="1136" />
	<platform name="browser">
        <preference name="SplashScreen" value="www/splash.png" />
        <preference name="ShowSplashScreen" value="false" />
    </platform>
    <platform name="android">
        <resource-file src="google-services.json" target="google-services.json" />
        <icon density="ldpi" qualifier="ldpi" src="www/res/icon/android/icon-36-ldpi.png" />
        <icon density="mdpi" qualifier="mdpi" src="www/res/icon/android/icon-48-mdpi.png" />
        <icon density="hdpi" qualifier="hdpi" src="www/res/icon/android/icon-72-hdpi.png" />
        <icon density="xhdpi" qualifier="xhdpi" src="www/res/icon/android/icon-96-xhdpi.png" />
        <icon density="xxhdpi" qualifier="xxhdpi" src="www/res/icon/android/icon-144-xxhdpi.png" />
        <icon density="xxxhdpi" qualifier="xxxhdpi" src="www/res/icon/android/icon-192-xxxhdpi.png" />
        <splash qualifier="ldpi" src="www/res/screen/android/screen-ldpi-portrait.png" />
        <splash qualifier="mdpi" src="www/res/screen/android/screen-mdpi-portrait.png" />
        <splash qualifier="hdpi" src="www/res/screen/android/screen-hdpi-portrait.png" />
        <splash qualifier="xhdpi" src="www/res/screen/android/screen-xhdpi-portrait.png" />
        <splash qualifier="xxhdpi" src="www/res/screen/android/screen-xxhdpi-portrait.png" />
        <splash qualifier="xxxhdpi" src="www/res/screen/android/screen-xxxhdpi-portrait.png" />
    </platform>
    <platform name="ios">
        <resource-file src="GoogleService-Info.plist" />
        <icon height="57" src="www/res/icon/ios/icon.png" width="57" />
        <icon height="114" src="www/res/icon/ios/icon@2x.png" width="114" />
        <icon height="29" src="www/res/icon/ios/icon-small.png" width="29" />
        <icon height="58" src="www/res/icon/ios/icon-small@2x.png" width="58" />
        <icon height="87" src="www/res/icon/ios/icon-small@3x.png" width="87" />
        <icon height="40" src="www/res/icon/ios/icon-small-40.png" width="40" />
        <icon height="80" src="www/res/icon/ios/icon-small-40@2x.png" width="80" />
        <icon height="120" src="www/res/icon/ios/icon-small-40@3x.png" width="120" />
        <icon height="50" src="www/res/icon/ios/icon-50.png" width="50" />
        <icon height="100" src="www/res/icon/ios/icon-50@2x.png" width="100" />
        <icon height="60" src="www/res/icon/ios/icon-60.png" width="60" />
        <icon height="120" src="www/res/icon/ios/icon-60@2x.png" width="120" />
        <icon height="180" src="www/res/icon/ios/icon-60@3x.png" width="180" />
        <icon height="70" src="www/res/icon/ios/icon-70.png" width="70" />
        <icon height="140" src="www/res/icon/ios/icon-70@2x.png" width="140" />
        <icon height="72" src="www/res/icon/ios/icon-72.png" width="72" />
        <icon height="144" src="www/res/icon/ios/icon-72@2x.png" width="144" />
        <icon height="76" src="www/res/icon/ios/icon-76.png" width="76" />
        <icon height="152" src="www/res/icon/ios/icon-76@2x.png" width="152" />
        <icon height="167" src="www/res/icon/ios/icon-83.5@2x.png" width="167" />
        <splash height="1024" src="www/res/screen/ios/screen-ipad-portrait.png" width="768" />
        <splash height="2008" src="www/res/screen/ios/screen-ipad-portrait-2x.png" width="1536" />
        <splash height="480" src="www/res/screen/ios/screen-iphone-portrait.png" width="320" />
        <splash height="960" src="www/res/screen/ios/screen-iphone-portrait-2x.png" width="640" />
        <splash height="1136" src="www/res/screen/ios/screen-iphone-portrait-568h-2x.png" width="640" />
        <splash height="1334" src="www/res/screen/ios/screen-iphone-portrait-667h.png" width="750" />
        <splash height="2208" src="www/res/screen/ios/screen-iphone-portrait-736h.png" width="1242" />
        <splash height="750" src="www/res/screen/ios/screen-iphone-landscape-667h.png" width="1334" />
        <splash height="1242" src="www/res/screen/ios/screen-iphone-landscape-736h.png" width="2208" />
    </platform>
    <access origin="*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <allow-navigation href="data:*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
	<plugin name="cordova-plugin-device" spec="1.1.7" />
	<plugin name="cordova-plugin-dialogs" spec="1.3.4" />
	<plugin name="cordova-plugin-file" spec="4.3.3" />
	<plugin name="cordova-plugin-media" spec="4.0.0" />
	<plugin name="cordova-plugin-network-information" spec="1.3.4" />
	<plugin name="cordova-plugin-globalization" spec="1.0.8" />
    <plugin name="cordova-plugin-splashscreen" spec="4.1.0" />
    <plugin name="cordova-plugin-statusbar" spec="2.3.0" />
    <plugin name="cordova-plugin-vibration" spec="2.1.6" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.3" />
    <plugin name="phonegap-plugin-push" spec="2.0.0" />
    <plugin name="cordova-plugin-inappbrowser" spec="1.7.2" />
</widget>
